# Generates documentation for the Speech to Text module

OUTDIR = _build

# =====================================================================

.PHONY: html clean

# Generates HTML based on Doxygen comments in code
html: | $(OUTDIR)
	@doxygen

# Cleans the documentation directory generated by Doxygen
clean:
	rm -rf $(OUTDIR)

# Creates the output directory
$(OUTDIR):
	mkdir -p $(OUTDIR)
